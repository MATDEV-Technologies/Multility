<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity"
    android:background="#000000">

    <!-- GLOBAL NOTE: Spinners provide a quick way to
    select one value from a set, displayed as adropdown menu -->

    <!-- TODO:
    Make text hardcoded under an alias in
    strings.xml to help with translations,
    Make text smaller once the activity is more populated -->
    <Spinner
        android:id="@+id/color_spinner"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:text="Accent Colour (disabled)"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_drop_down_24"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="360dp"
        tools:ignore="ContentDescription,RtlHardcoded"/>
    <!-- android:contentDescription=""/>-->

    <Spinner
        android:id="@+id/country_spinner"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:entries="@array/countries"
        android:paddingLeft="10dp"
        tools:ignore="RtlHardcoded,RtlSymmetry"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="20dp"
        android:text="Location"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_drop_down_24"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="360dp"
        tools:ignore="ContentDescription,RtlHardcoded"/>

    <!-- GLOBAL NOTE: A clickable/tappable button to performs actions
    on click/tap -->
    <Button
        android:id="@+id/terms_of_service_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="220dp"
        android:background="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="20dp"
        android:text="Terms of Service"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="20dp"
        android:text="View Multility's terms of service"
        android:textAlignment="center"
        android:textColor="@color/colorGrey"
        android:textSize="18sp"
        tools:ignore="HardcodedText,RtlHardcoded"/>


    <Button
        android:id="@+id/privacy_policy_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="320dp"
        android:background="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="335dp"
        android:layout_marginLeft="20dp"
        android:text="Privacy Policy"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="20dp"
        android:text="View Multility's privacy policy"
        android:textAlignment="center"
        android:textColor="@color/colorGrey"
        android:textSize="18sp"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <Button
        android:id="@+id/about_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="420dp"
        android:background="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="435dp"
        android:layout_marginLeft="20dp"
        android:text="About"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="465dp"
        android:layout_marginLeft="20dp"
        android:text="View Multility's team members"
        android:textAlignment="center"
        android:textColor="@color/colorGrey"
        android:textSize="18sp"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center|bottom"
        android:text="Multility, an app by MATDEV Technologies\n(2020)"
        android:textAlignment="center"
        android:textColor="@color/colorGrey"
        android:textSize="16sp"
        tools:ignore="HardcodedText,RtlHardcoded"/>

</RelativeLayout>