<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".DailyFact">

    <!-- GLOBAL NOTE: View is a simple component to put text or
     images over on top (meant for single instances, unlike CardView) -->
    <View
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:background="@drawable/grey_background_rounded_2"/>

    <ImageView
        android:layout_width="99dp"
        android:layout_height="141dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_book_24"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/daily_fact_text"
        android:layout_width="310dp"
        android:layout_height="200dp"
        android:autoSizeTextType="uniform"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        android:text="Next Fact In:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/fact_countdown_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:textSize="24sp"
        android:text="23:59:59"
        android:textColor="@color/colorPrimaryDark"
        tools:ignore="HardcodedText"/>

</RelativeLayout>