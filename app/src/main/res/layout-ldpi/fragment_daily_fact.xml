<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".DailyFact">

    <!-- GLOBAL NOTE: View is a simple component to put text or
     images over on top (meant for single instances, unlike CardView) -->
    <View
        android:layout_width="280dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/grey_background_rounded_2"/>

    <ImageView
        android:layout_width="69dp"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_book_24"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/daily_fact_text"
        android:layout_width="240dp"
        android:layout_height="180dp"
        android:autoSizeTextType="uniform"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/daily_fact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="335dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_rounded_green"
        android:textColor="@color/colorCardBackground"
        android:textSize="17sp"
        android:padding="16dp"
        android:text="GENERATE FACT"
        tools:ignore="HardcodedText"/>

</RelativeLayout>