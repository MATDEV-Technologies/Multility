<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".PasswordGenerator">

    <!-- GLOBAL NOTE: A CheckBox is a specific type of two-states
    button that can be either checked or unchecked -->
    <CheckBox
        android:id="@+id/include_lowercase_checkbox"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="12dp"
        android:layout_centerHorizontal="true"
        android:text="Include Lowercase Letters"
        android:background="@color/colorCardBackground"
        android:textColor="@color/colorGrey"
        android:textSize="16sp"
        android:buttonTint="@color/colorGrey"
        android:checked="true"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry"/>

    <CheckBox
        android:id="@+id/include_uppercase_checkbox"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:padding="12dp"
        android:layout_centerHorizontal="true"
        android:text="Include Uppercase Letters"
        android:background="@color/colorCardBackground"
        android:textColor="@color/colorGrey"
        android:textSize="16sp"
        android:buttonTint="@color/colorGrey"
        android:checked="true"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry"/>

    <CheckBox
        android:id="@+id/include_numbers_checkbox"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp"
        android:background="@color/colorCardBackground"
        android:buttonTint="@color/colorGrey"
        android:padding="12dp"
        android:text="Include Numbers"
        android:textColor="@color/colorGrey"
        android:textSize="16sp"
        android:checked="true"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry"/>

    <CheckBox
        android:id="@+id/include_symbols_checkbox"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:background="@color/colorCardBackground"
        android:buttonTint="@color/colorGrey"
        android:padding="12dp"
        android:text="Include Symbols"
        android:textColor="@color/colorGrey"
        android:textSize="16sp"
        android:checked="true"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry"/>
    <!-- android:check="false" for LastPass style -->

    <Button
        android:id="@+id/password_generator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_rounded_green"
        android:textColor="@color/colorCardBackground"
        android:textSize="18sp"
        android:text="GENERATE PASSWORD"
        android:padding="16dp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/generated_password_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:background="@drawable/grey_background_rounded"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:text="PASSWORD:  "
        tools:ignore="HardcodedText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:textSize="12sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Hold to copy password"
        tools:ignore="HardcodedText"/>

</RelativeLayout>